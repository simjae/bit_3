package study;

import java.util.Scanner;

public class Star {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int m = sc.nextInt();

		if (n > 100 || n < 0) {
			System.out.println("INPUT ERROR!!");
			return;
		}
		switch (m) {
		case 1:
			for (int i = 0; i < n; i++) {
				for (int j = 0; j <=i ; j++) {
					System.out.print('*');
				}
				System.out.println();
			}
			break;
		case 2:
			
			break;
		case 3:
			
			break;
		default:
			System.out.println("INPUT ERROR!!");
			break;
		}
	}
}
